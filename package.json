{
  "name": "meapla",
  "version": "0.1.0",
  "author": "Tobias Lengsholz<tobias@lengsholz.de>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "update-schema:dev": "get-graphql-schema \"http://localhost:4000\" > schema.graphql",
    "update-schema:production": "get-graphql-schema \"https://meapla-server.herokuapp.com\" > schema.graphql",
    "codegen:dev": "yarn update-schema:dev && graphql-codegen --config codegen.yml",
    "codegen:production": "yarn update-schema:production && graphql-codegen --config codegen.yml",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "eslint": "eslint . --ext \".ts,.tsx,.js,.graphql,.json\"",
    "stylelint": "stylelint --config ./stylelint.config.js \"./**/*.(ts|tsx)\"",
    "lint": "yarn eslint",
    "format": "prettier --write \"**/*.{js,ts,tsx}\" --ignore-path .gitignore",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "deploy-storybook": "storybook-to-ghpages",
    "postinstall": "yarn codegen:production"
  },
  "dependencies": {
    "@apollo/client": "^3.3.11",
    "graphql": "^15.5.0",
    "grommet": "^2.16.3",
    "grommet-icons": "^4.5.0",
